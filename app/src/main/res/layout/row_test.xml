<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iconImageView"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/def" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="22dp"
        android:layout_toEndOf="@+id/iconImageView"
        android:textColor="@color/textColorMain"
        android:textSize="18sp"
        tools:text="Nurmukhamed" />

    <TextView
        android:id="@+id/questionCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/iconImageView"
        android:text="@string/nOfQuestions"
        android:textColor="@color/textColorGrayish"
        android:textSize="11sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionCountTextView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="22dp"
        android:layout_toEndOf="@+id/iconImageView"
        android:textColor="@color/textColorGrayish"
        tools:text="23 questions" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_below="@+id/descriptionTextView"
        android:layout_marginTop="24dp"
        android:background="@color/phoneEditBorderColor" />

</RelativeLayout>